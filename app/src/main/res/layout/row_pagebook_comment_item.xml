<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/large_intrinsic_padding"
    android:paddingTop="@dimen/large_intrinsic_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_pagebook_comment_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_stub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_pagebook_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="parent"
        android:layout_constraintStart_toEndOf="@id/iv_pagebook_comment_row"
        android:layout_marginStart="8dp"

        android:text="User Name"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/iv_pagebook_comment_row"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pagebook_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="parent"
        android:layout_constraintStart_toEndOf="@id/iv_pagebook_comment_row"
        android:layout_marginStart="8dp"
        android:maxLines="4"


        android:text="This is my testing text onlyy..."
        app:layout_constraintStart_toEndOf="@+id/iv_pagebook_comment_row"
        app:layout_constraintTop_toBottomOf="@+id/tv_pagebook_comment_name" />

    <TextView
        android:id="@+id/tv_pagebook_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_constraintTop_toBottomOf="parent"
        android:layout_constraintStart_toEndOf="@id/iv_pagebook_comment_row"
        android:layout_marginStart="8dp"
        android:text="DD:MM:YY HH:MM:SS"
        app:layout_constraintStart_toEndOf="@+id/iv_pagebook_comment_row"
        app:layout_constraintTop_toBottomOf="@+id/tv_pagebook_comment_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_child_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pagebook_comment_date"
        tools:listitem="@layout/row_pagebook_comment_item" />

</androidx.constraintlayout.widget.ConstraintLayout>