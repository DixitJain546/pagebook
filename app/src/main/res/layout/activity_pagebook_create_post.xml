<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".pagebook.PagebookCreatePostActivity">

            <Button
                android:id="@+id/btn_pagebook_create_post_upload_image"
                android:layout_width="167dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/primary_dark_color"
                android:text="Upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_pagebook_create_post_upload_video" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:gravity="center|center_vertical"
                android:hint="What's on your mind?"
                android:text="ADD POST"
                android:textColor="@color/primary_dark_color"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.392"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_pagebook_create_post_text"
                android:layout_width="0dp"
                android:layout_height="195dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="What's in your mind?"
                android:inputType="textMultiLine"
                android:textColor="#020101"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/iv_pagebook_create_post_image_upload"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_pagebook_create_post_text"
                app:srcCompat="@drawable/image_icon" />

            <ImageView
                android:id="@+id/iv_pagebook_create_post_upload_video"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_pagebook_create_post_image_upload"
                app:layout_constraintTop_toBottomOf="@+id/et_pagebook_create_post_text"
                app:srcCompat="@drawable/video_icon" />

            <EditText
                android:id="@+id/et_pagebook_create_post_category"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Category"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/btn_pagebook_create_post_upload_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_pagebook_create_post_upload_video"
                app:layout_constraintTop_toBottomOf="@+id/et_pagebook_create_post_text" />

            <Button
                android:id="@+id/btn_pagebook_create_post_add_post"

                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/primary_dark_color"
                android:text="Add Post"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_pagebook_create_post_upload_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>